---
import Layout from '../../layouts/Layout.astro';

const accessError = Astro.url.searchParams.get('error') === 'invalid';
---

<Layout title="Admin Login">
  <div class="min-h-[70vh] flex items-center justify-center px-4">
    <div class="w-full max-w-md">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-8">
        <h1 class="text-2xl font-bold mb-6 text-center">Admin Access</h1>
        
        {accessError && (
          <div class="bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-400 px-4 py-2 rounded-lg mb-4">
            Invalid access code
          </div>
        )}

        <form action="/admin/verify" method="POST" class="space-y-4">
          <div>
            <label for="accessCode" class="block text-sm font-medium mb-1">Access Code</label>
            <input
              type="password"
              id="accessCode"
              name="accessCode"
              required
              class="w-full px-4 py-2 rounded-lg border dark:border-gray-700 bg-gray-50 dark:bg-gray-900 focus:outline-none focus:ring-2 focus:ring-accent-light dark:focus:ring-accent-dark"
            />
          </div>
          <button
            type="submit"
            class="w-full bg-accent-light dark:bg-accent-dark text-white py-2 px-4 rounded-lg hover:opacity-90 transition-opacity"
          >
            Login
          </button>
        </form>
      </div>
    </div>
  </div>
</Layout>
